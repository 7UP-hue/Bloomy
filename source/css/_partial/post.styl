.index-container
  position: relative
  padding-right: 12em

.markdown-body
  background-image: linear-gradient(0deg,transparent 24%,rgba(201,195,195,.329) 25%,hsla(0,8%,80.4%,.05) 26%,transparent 27%,transparent 74%,hsla(0,5.2%,81%,.185) 75%,rgba(180,176,176,.05) 76%,transparent 77%,transparent),linear-gradient(90deg,transparent 24%,rgba(204,196,196,.226) 25%,hsla(0,4%,66.1%,.05) 26%,transparent 27%,transparent 74%,hsla(0,5.2%,81%,.185) 75%,rgba(180,176,176,.05) 76%,transparent 77%,transparent);
  font-size: 1rem
  line-height: 30px;
  letter-spacing: 2px;
  word-break: break-word;
  font-family: -apple-system,BlinkMacSystemFont,Segoe UI,Roboto,Oxygen,Ubuntu,Cantarell,Open Sans,Helvetica Neue,sans-serif;
  background-color: #fff;
  background-size: 50px 50px;
  padding-bottom: 60px
  color: #383838;

.markdown-body img
  max-width: 90%

.post-content li
  list-style: inherit

.post-content a
  color: #a862ea
  opacity: .85
  vertical-align: baseline
  transition: all .1s
  display: inline-block
  position: relative
  // overflow: hidden

.post-content a:hover
  opacity: 1

.post-content a::after
  content: ""
  width: 100%
  display: inline-block
  position: absolute
  bottom: 0
  left: 0
  border-bottom: 1px solid #a862ea
  transform: scale(0)
  transform-origin: bottom right
  transition: transform .3s ease-in-out

.post-content a:hover::after
  transform: scale(1)
  transform-origin: bottom left


.markdown-body h1, .markdown-body h2, .markdown-body h3, .markdown-body h4, .markdown-body h5, .markdown-body h6 
    margin: 24px 0 12px
    color: #9268b9

.post-content li::marker
  color: #a862ea