@media screen and (max-width: 617px) {
  html {
    font-size: 12px
  }
  .title-rase-in {
    font-size: 1.875rem
    display: flex
    flex-wrap: wrap
  }
  .index-aside {
    display: none
  }
  .index-main {
    width: 100%
  }
  .menu-more {
    display: inline-block
  }
  .header {
    padding: 0 20px 0 20px
  }
  .navbar {
    display: none
    padding: 5px 0 5px 0
    position: absolute
    top: 70px
    right: 10px
    background: white
    border-radius: 5px
    box-shadow: 0px 2px 8px 7px #ccc
    width: 5rem
  }
  .navbar-hide {
    display: block
    transform: scale(1)
    opacity: 1
    animation: fadeOut .7s forwards
    transform-origin: top
    @keyframes fadeOut {
      to {
        opacity: 0
        transform: scale(0)
      }
    }
  }
  .navbar-show {
    display: block
    transform: scale(0)
    opacity: 0
    animation: fadeIn .7s forwards
    transform-origin: top
    @keyframes fadeIn {
      to {
        opacity: 1
        transform: scale(1)
      }
    }
  }
  .navbar::before {
    content: ''
    width: 0
    height: 0
    border-width: 0 10px 10px 10px
    border-style: solid
    border-color: transparent
    border-bottom-color:white
    position: absolute
    top: -9px
    left: 30px
  }
  .navbar .menu {
    flex-direction: row
    flex-wrap: wrap
    justify-content: center
    margin-block-start: 0;
    margin-block-end: 0;
    padding-inline-start: 0;
  }
  ul {
    padding-inline-start: 1.5rem
  }
}

@media screen and (max-width: 824px) {
  .toc-main {
    display: none
  }
  .index-container {
    padding-right: 0 !important
  }
}